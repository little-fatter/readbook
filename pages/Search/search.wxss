.detailsbox{
  display: flex;
  flex-wrap: nowrap;
  width: 100%;
  margin: 5px 10px;
  height: 160px;
  border-bottom: 1px solid #f7f7f7;
padding: 10px 0;
}
.details{
flex: 4;
display: flex;
flex-direction: column;
padding: 0 10px;
font-size: 12px;
color: #afafaf;
}
.detailheader{
  flex: 1
}
.detailbottom{
  flex: 2;
  display: flex;
  flex-direction: column
}
.shortintro{
  flex: 5;
  overflow: hidden;
  -webkit-box-orient: vertical;
  display: -webkit-box;
  -webkit-line-clamp:6
}
.images{
  flex: 2
}
.img {
  width: 100%;
  height: 100%
}
.authors{
  margin-top: 5px;
  margin-bottom: 5px
}
.lately{
  flex: 1;
  color:red
}
.box{
  display: flex;
  flex-wrap: wrap
}
.boxson{
  margin: 10px;
padding: 10rpx 20rpx;
font-size: 14px;
color: white;
}
.headbox{
  display: flex;
  justify-content: space-between;
  margin: 2px 10px;
}
.clearhistory{
  color: red;
  font-size: 14px
}
.history{
  margin: 5px 10px;
border-bottom: 1px solid #f7f7f7;
padding-bottom: 6px;
font-size: 14px;
}
.titles{
  font-size: 14px;
font-weight: bolder;
color: black;
}