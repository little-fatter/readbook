/* pages/CatsBooks/catsbooks.wxss */
/*弹性盒子公共属性*/
.box{
  display: flex;
  flex-wrap: wrap;
  border-bottom: 1px solid #f7f7f7;
margin-bottom: 10px;
padding-bottom: 10px;
margin-top: 10px;
}
/*头部种类*/
.total{
  margin-left: 10px
}
/*小类*/
.minor{
  margin-left: 10px
}
.detailsbox{
  display: flex;
  flex-wrap: nowrap;
  width: 100%;
  margin: 5px 10px;
  height: 160px;
  border-bottom: 1px solid #f7f7f7;
padding: 5px;
}
.details{
flex: 3;
display: flex;
flex-direction: column;
padding: 10px;
}
.detailheader{
  flex: 1
}
.detailbottom{
  flex: 2;
  display: flex;
  flex-direction: column
}
.shortintro{
  flex: 5;
  overflow: hidden;
  -webkit-box-orient: vertical;
  display: -webkit-box;
  -webkit-line-clamp:4;
  color: #afafaf
}
.images{
  flex: 2
}
.img {
  width: 100%;
  height: 100%
}
.titles{
  font-weight: bolder
}
.authors{
  margin-top: 5px;
  margin-bottom: 5px;
  color: #afafaf
}
.choosered{
  color: red
}